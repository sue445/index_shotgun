source "https://rubygems.org"

gem "activerecord", "~> 4.2.0"

group :postgresql do
  # https://github.com/rails/rails/blob/v4.2.10/activerecord/lib/active_record/connection_adapters/postgresql_adapter.rb#L16
  gem "pg", "~> 0.15"
end

group :mysql do
  # https://github.com/rails/rails/blob/v4.2.10/activerecord/lib/active_record/connection_adapters/mysql2_adapter.rb#L3
  gem "mysql2", ">= 0.3.13", "< 0.5"
end

group :oracle do
  gem "activerecord-oracle_enhanced-adapter", "~> 1.6.0"
  gem "ruby-oci8"
end

gemspec path: "../"

eval(Pathname("#{__dir__}/common.gemfile").read)
