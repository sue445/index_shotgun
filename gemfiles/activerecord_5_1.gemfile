source "https://rubygems.org"

gem "activerecord", "~> 5.1.0"

group :postgresql do
  # https://github.com/rails/rails/blob/v5.1.4/activerecord/lib/active_record/connection_adapters/postgresql_adapter.rb#L2
  gem "pg", "~> 0.18"
end

group :mysql do
  # https://github.com/rails/rails/blob/v5.1.5/activerecord/lib/active_record/connection_adapters/mysql2_adapter.rb#L4-L6
  gem "mysql2", ">= 0.4.4", "< 0.5"
end

gemspec path: "../"

eval(Pathname("#{__dir__}/common.gemfile").read)
